NORMAL_CODE (accept) <-- start state
    ": IN_STRING
    ': IN_CHAR_LITERAL
    /: MAYBE_COMMENT_START
    other: NORMAL_CODE

IN_STRING (accept)
    \: IGNORED_CHARACTER_IN_STRING
    ": NORMAL_CODE
    other: IN_STRING

IGNORED_CHARACTER_IN_STRING (accept)
    other: IN_STRING

IN_CHAR_LITERAL (accept)
    \: IGNORED_CHARACTER_IN_CHAR_LITERAL
    ': NORMAL_CODE
    other: IN_CHAR_LITERAL

IGNORED_CHARACTER_IN_CHAR_LITERAL (accept)
    other: IN_CHAR_LITERAL

MAYBE_COMMENT_START (reject)
    ': IN_CHAR_LITERAL
    ": IN_STRING
    /: MAYBE_COMMENT_START
    *: IN_COMMENT
    other: NORMAL_CODE

IN_COMMENT (reject)
    *: MAYBE_LEAVING_COMMENT
    other: IN_COMMENT

MAYBE_LEAVING_COMMENT (reject)
    *: MAYBE_LEAVING_COMMENT
    /: NORMAL_CODE
    other: IN_COMMENT
